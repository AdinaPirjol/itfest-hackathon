<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
    <head>
        <meta charset="utf-8" />
        <title>{% block title %}HackPlatform{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('bundles/app/images/favicon.ico') }}">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
        <meta name="viewport" content="width=device-width" />

        {% block stylesheets %}
            <!-- Bootstrap core CSS     -->
            <link href="{{ asset('bundles/app/css/bootstrap.min.css') }}" rel="stylesheet" />

            <!-- Animation library for notifications   -->
            <link href="{{ asset('bundles/app/css/animate.min.css') }}" rel="stylesheet"/>

            <!-- Chartist -->
            <link rel="stylesheet" href="{{ asset('assets/vendor/chartist/dist/chartist.min.css') }}"/>

            <!--     Fonts and icons     -->
            <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
            <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
            {#<link href="{{ asset('bundles/app/css/pe-icon-7-stroke.css') }}" rel="stylesheet" />#}
            <link href="{{ asset('bundles/app/css/jquery-ui.css') }}" rel="stylesheet"/>
            <link rel="stylesheet" href="{{ asset('bundles/app/css/plugins/prism/prism.min.css')}}">
            <link rel="stylesheet" href="{{ asset('bundles/app/css/main_style.min.css')}}">
        {% endblock %}
    </head>

    <body>
    {% block navbar %}
        <!-- HEADER:Start -->
        <nav class="navbar navbar-default navbar-fixed-top" >
            <div class="container-fluid"><!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <div class="nav-controls visible-xs-inline-block pull-right">
                        <button id="toggle-nav-btn" type="button" class="btn btn-default navbar-btn" data-toggle="collapse" data-target="#main-nav" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span><i class="fa fa-angle-down"></i>
                        </button>
                    </div>
                </div><!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="main-nav">
                    <h4 class="navbar-text">HackPlatform</h4>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="javascript:void(0)" class="dropdown-toggle dd-language" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="visible-xs-inline">Language</span>
                                {% if app.request.locale == 'ro' %}
                                    <span><i class="flag-icon flag-icon-ro"></i>RO</span><i class="fa fa-angle-down hidden-xs"></i>
                                {% elseif app.request.locale == 'en'%}
                                    <span><i class="flag-icon flag-icon-gb"></i>EN</span><i class="fa fa-angle-down hidden-xs"></i>
                                {% elseif app.request.locale == 'fr'%}
                                    <span><i class="flag-icon flag-icon-fr"></i>FR</span><i class="fa fa-angle-down hidden-xs"></i>
                                {% elseif app.request.locale == 'de'%}
                                    <span><i class="flag-icon flag-icon-de"></i>DE</span><i class="fa fa-angle-down hidden-xs"></i>
                                {% endif %}
                            </a>
                            <ul class="dropdown-menu dm-language">
                                <li>
                                    <a href="{{ path(app.request.attributes.get('_route'),{'_locale':'ro'}) }}">
                                        <i class="flag-icon flag-icon-ro"></i>
                                        <span>{{ 'lang.ro'|trans }}</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path(app.request.attributes.get('_route'),{'_locale':'en'}) }}">
                                        <i class="flag-icon flag-icon-gb"></i>
                                        <span>{{ 'lang.en'|trans }}</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path(app.request.attributes.get('_route'),{'_locale':'fr'}) }}">
                                        <i class="flag-icon flag-icon-fr"></i>
                                        <span>{{ 'lang.fr'|trans }}</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path(app.request.attributes.get('_route'),{'_locale':'de'}) }}">
                                        <i class="flag-icon flag-icon-de"></i>
                                        <span>{{ 'lang.de'|trans }}</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    {% endblock %}
        <div class="main-container" id="main-container">
            <div class="main-container-inner">
                {% block body %}{% endblock %}
            </div>
        </div>

        {% block javascripts %}
            {#FOS routing#}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>

            <!--   Core JS Files   -->
            <script src="{{ asset('bundles/app/js/jquery-1.10.2.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/app/js/lib/jquery-ui.1.11.4.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/app/js/bootstrap.min.js') }}" type="text/javascript"></script>

            <!-- jQuery Translation Bundle -->
            <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
            <script src="{{ url('bazinga_jstranslation_js') }}"></script>

            <!--  Checkbox, Radio & Switch Plugins -->
            <script src="{{ asset('bundles/app/js/bootstrap-checkbox-radio-switch.js') }}"></script>

            <!--  Charts Plugin -->
            {#<script src="{{ asset('bundles/app/js/chartist.min.js') }}"></script>#}
            <script src="{{ asset('assets/vendor/chartist/dist/chartist.min.js') }}"></script>

            <!--  Notifications Plugin    -->
            <script src="{{ asset('bundles/app/js/bootstrap-notify.js') }}"></script>

            <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
            {#<script src="{{ asset('bundles/app/js/light-bootstrap-dashboard.js') }}"></script>#}

            <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
            <script src="{{ asset('bundles/app/js/demo.js') }}"></script>
            <script src="{{ asset('bundles/app/js/lib/moment.min.js')}}"></script>
            <script src="{{ asset('bundles/app/js/lib/fullcalendar.min.js')}}"></script>

            <script type="text/javascript" src="{{ asset('bundles/app/js/project-filter.js') }}"></script>
        {% endblock %}
    </body>
</html>
