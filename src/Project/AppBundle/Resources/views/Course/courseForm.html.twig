{#dont include form_start; is child of edit/add#}

<div class="row">
    <div class="col-md-12">
        <div class="list-unstyled">
            {{ form_errors(form) }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(form.name) }}<span>*</span>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'view_course.coursename'|trans } }) }}
        </div>
    </div>

    <div class="col-md-12">
        <div class="form-group">
            {{ form_label(form.college) }}<span>*</span>
            {{ form_errors(form.college) }}
            {{ form_widget(form.college, { 'attr': {'class': 'form-control', 'placeholder': 'Universitate'|trans, 'autocomplete':'off' } }) }}
        </div>
    </div>
</div>

<button type="submit" class="btn btn-info btn-fill pull-right" id="{{ form.vars.name }}_save">
    {{ 'view_course.buttons.save'|trans }}
</button>
<div class="clearfix"></div>

{{ form_end(form) }}