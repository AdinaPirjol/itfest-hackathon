{#dont include form_start; is child of edit/add#}

<div class="row">
    <div class="col-md-12">
        <div class="list-unstyled">
            {{ form_errors(form) }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            {{ form_label(form.coursename) }}<span>*</span>
            {{ form_errors(form.coursename) }}
            {{ form_widget(form.coursename, { 'attr': {'class': 'form-control', 'placeholder': 'view_course.coursename'|trans } }) }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            {{ form_label(form.group) }}<span>*</span>
            {{ form_errors(form.group) }}
            {{ form_widget(form.group, { 'attr': {'class': 'form-control', 'placeholder': 'view_course.group'|trans } }) }}
        </div>
    </div>
</div>

<button type="submit" class="btn btn-info btn-fill pull-right" id="{{ form.vars.name }}_save">
    {{ 'view_course.buttons.save'|trans }}
</button>
<div class="clearfix"></div>

{{ form_end(form) }}