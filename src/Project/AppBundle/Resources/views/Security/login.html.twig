{% block fos_user_content %}
    <head>
        <meta charset="UTF-8">
        <title>Login</title>

        <link href="{{ asset('bundles/app/css/reset.css') }}" rel="stylesheet" />

        <link rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900'>
        <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>

        <link href="{{ asset('bundles/app/css/login.css') }}" rel="stylesheet" />
    </head>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="pen-title">
    <h1>Login</h1>
</div>
<div class="container">
    <div class="card"></div>
    <div class="card">
        <h1 class="title">Login | <a href="{{ path('register') }}">Register</a></h1>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if token is defined %}
            <input type="hidden" name="_csrf_token" value="{{ token }}" />
        {% endif %}
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div class="input-container">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="login-input" />
            <label for="Username">Username</label>
            <div class="bar"></div>
        </div>
        <div class="input-container">
            <input type="password" id="password" name="_password" required="required" class="login-input" />
            <label for="Password">Password</label>
            <div class="bar"></div>
        </div>
        <div class="button-container">
            <button type="submit" id="_submit" name="_submit" value="Submit" ><span>Go</span></button>
        </div>
    </form>
    <form action="{{ path('reset-password') }}" method="get">
        <div class="button-container">
            <button type="submit" id="_submit" name="_submit" value="Submit" ><span>Forgot password?</span></button>
        </div>
        </form>
        </div></div>
{% endblock fos_user_content %}
