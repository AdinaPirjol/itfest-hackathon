{% extends "::default/index.html.twig" %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <form action="{{ path('add-event-submit') }}" method="post">

        <div class="form-group">
            <label class="col-md-3 control-label">Nume eveniment</label>

            <div class="col-md-12">
                <input type="text" class="form-control" id="name" name="name" placeholder="" required="">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">Tip eveniment</label>

            <select class="form-control" name="tip" id="tip">
                {% for key, tip in tipuri %}
                    <option id="{{ key }}">{{ tip }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">Recurenta:</label>
            <select class="form-control" name="recurenta" id="recurenta">
                {% for key, r in recurenta %}
                    <option id="{{ key }}">{{ r }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">Data:</label>

            <div class="col-md-12">
                <input type="text" class="form-control" id="name" name="name" placeholder="" required="">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">Ora incepere</label>

            <div class="col-md-12">
                <input type="text" class="form-control" id="name" name="name" placeholder="" required="">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">Ora sfarsit</label>

            <div class="col-md-12">
                <input type="text" class="form-control" id="name" name="name" placeholder="" required="">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="btn-group">
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="fa fa-cog"></i>Salveaza
                    </button>
                </div>
            </div>
        </div>

    </form>
{% endblock %}
