<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-2">
        <title>
            {{ 'mail.create_account.title'|trans }}
        </title>
    </head>

    <body>
        <style>
            body {
                font-family: Arial, Helvetica, sans-serif;
                font-size: 12px;
            }
        </style>

        {{ 'mail.create_account.body'|trans({'%username%': username, '%password%': password}) }}

        <div>
            <a href="{{ url('confirm_user', {'answer': '1','userId': userId}) }}">
                <i class="fa fa-plus"></i>{{ 'mail.apply_project.accept'|trans }}</a> /

            <a href="{{ url('confirm_user', {'answer': '0', 'userId': userId}) }}">
                <i class="fa fa-list-ul"></i>{{ 'mail.apply_project.reject'|trans }}</a>
        </div>
        <br>

        <br>

        {{ 'mail.footer'|trans }}
    </body>
</html>
